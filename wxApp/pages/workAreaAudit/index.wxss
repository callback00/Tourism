.wrap {

    background-color: white;

}

.manager-content {
    /*min-height: 100vh;*/
    background: white;

}

.manager-audit-msg {
    position: relative;
    top: 10rem;
    font-size: 16px;
    text-align: center;
    padding: 0 1rem;
    color: black;

}

.manager-audit-msg button {
    background: white;
    margin: 10px 1rem 0 1rem;
    color: black;
}

.manager-audit-userinfo {
    position: relative;
    top: 5rem;
    font-size: 16px;
    text-align: center;
    padding: 0 1rem 1rem 1rem;
    margin: 0 1rem;
    background: #46b8da;  /*#46b8da  CMYK蓝: #2E3092 暗青蓝: #004A80 暗紫蓝:#1A1364*/

    border-radius: 10px;

}

.manager-audit-userinfo .circle {
    position: absolute;
    height: 80px;
    width: 80px;
    border-radius: 80px;
    background: white;
    top: -50px;
    left: 50%;
    margin-left: -40px;
    z-index: 0;
}

.manager-audit-userinfo .title {
    padding-top: 2rem;
    font-size: 20px;
    color: white;
    position: relative;
    z-index: 1;
    border-bottom: 1rpx solid #660066;
}

.manager-audit-userinfo .info {
    padding: 1rem 0;
}

.manager-audit-userinfo .info text {
    color: red;
    font-size: 1.5rem;
}

.manager-audit-userinfo button {
    margin: 10px 1rem 0 1rem;
    color: white;
    display: flex;
    align-items: center; /*定义body的元素垂直居中*/
    justify-content: center; /*定义body的里的元素水平居中*/

}

.manager-audit-userinfo .btn-audit {
    background: #660066;
    /*width: 400rpx;*/
    border-radius: 4rem;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    opacity: 0.8;


}

.manager-audit-userinfo .btn-home {
    background: #c85e0b;
    /*width: 400rpx;*/
    color: white;
    border-radius: 4rem;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    opacity: 0.9;

}